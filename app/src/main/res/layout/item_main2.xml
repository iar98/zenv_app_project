<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:backgroundTint="@color/white_transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_photo2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/photo5"/>
        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_photo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:fontFamily="@font/poppins_bold"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="6dp"/>
            <TextView
                android:id="@+id/tv_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tes"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="9.41sp"
                android:maxLength="100"
                android:textColor="@color/dark_blue"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>
            <TextView
                android:id="@+id/tv_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tes"
                android:fontFamily="@font/poppins_bold"
                android:textSize="11sp"
                android:maxLength="100"
                android:textColor="@color/dark_blue"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end|bottom">
                <Button
                    android:id="@+id/btnSatu2"
                    android:layout_width="wrap_content"
                    android:layout_height="20.22dp"
                    android:text="test"
                    android:textSize="8sp"
                    android:background="@drawable/btn_theme"/>
                <Button
                    android:id="@+id/btnDua2"
                    android:layout_width="52dp"
                    android:layout_height="20.22dp"
                    android:layout_gravity="end|bottom"
                    android:text="test"
                    android:textSize="8sp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_theme_3"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>